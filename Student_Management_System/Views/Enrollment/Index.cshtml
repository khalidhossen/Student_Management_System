@model IEnumerable<Student_Management_System.Models.Enrollment>

@{
    ViewBag.Title = "Index";
}

<h2>Enrollment List</h2>

<p>
    @Html.ActionLink("Enroll New Student", "Create")
</p>
<table class="table table-bordered table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StudentId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CourseId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EnrollmentDate)
        </th>
        <th>Action</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StudentId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CourseId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EnrollmentDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.EnrollmentId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.EnrollmentId })
        </td>
    </tr>
}

</table>
