@model IEnumerable<Student_Management_System.Models.Enrollment>

@{
    ViewBag.Title = "Index";
}

<h2>Enrolled Students</h2>


<table class="table table-bordered table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Student.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Course.CourseTitle)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.EnrollmentDate)
        </th>
        <th>Action</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Student.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Course.CourseTitle)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.EnrollmentDate)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.EnrollmentId })
        </td>
    </tr>
}

</table>
